<Window x:Class="SortingApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Сортировка чисел" Height="350" Width="400">
    <Grid>
        <Label Content="Введите числа (через запятую):" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"/>
        <TextBox x:Name="NumbersTextBox" HorizontalAlignment="Left" Height="30" VerticalAlignment="Top" Width="360" Margin="10,40,0,0"/>

        <ComboBox x:Name="SortingMethodComboBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="180" Margin="10,80,0,0">
            <ComboBoxItem Content="Сортировка пузырьком"/>
            <ComboBoxItem Content="Быстрая сортировка"/>
        </ComboBox>

        <Button Content="Сортировать" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Height="30" Margin="200,80,0,0" Click="SortButton_Click"/>

        <Label Content="Отсортированные числа:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,120,0,0"/>
        <TextBox x:Name="SortedNumbersTextBox" HorizontalAlignment="Left" Height="30" VerticalAlignment="Top" Width="360" Margin="10,150,0,0" IsReadOnly="True"/>
    </Grid>
</Window>
